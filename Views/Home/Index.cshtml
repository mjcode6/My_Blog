@model Bloggie.Web.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

 <div class="container col-xxl-8 px-4 py-5">
<div class="row align-items-center py-5 g-5">
  
    <div class="col-12 col-lg-6">


        <h1 class="display-5 fw-bold lh-1 mb-3">
            Bloggie -  The Dev Blog

        </h1>
        <p class="lead">
            Bloggie is the home for coding Blog covering a vast rang of 
            topics like Html,Css, Javascript, Asp.Net, Angular etc..
            Want to read the latest Dev article ? join the bloggie app and get all the
            mail that you need.
        </p>




    </div>






     <div class="col-12 col-lg-6">

            <img src="https://images.pexels.com/photos/196659/pexels-photo-196659.jpeg?auto=compress&cs=tinysrgb&w=600"
            alt="Bloggie - Dev Blogs"
                 class="d-block mx-lg-auto img-fluid" width="300" />



     </div>

</div>

</div>


<div class="container ">
    <div class="row justify-content-center">
        <div class="col-6 d-flex">

            @if(Model != null && Model.Tags.Any())
            {
                foreach(var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-1">

                        @tag.Name

                    </span>
                }
            }

        </div>

    </div>

</div>









<div class="container ">
    <div class="row justify-content-center">
        <div class="col-6">

            @if(Model != null && Model.BlogPosts.Any())
            {
                foreach(var BlogPost in Model.BlogPosts)
                {

                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@BlogPost.FeaturedImageUrl"  alt="@BlogPost.Heading"
                        class="mb-2 d-block img-fluid"/>


                        <h2 class="mb-4">
                            @BlogPost.Heading
                        </h2>

                        <p class="mb-4">
                            Author: @BlogPost.Author

                            <br />

                            Published date: @BlogPost.PublichedDate.ToShortDateString()
                        </p>

                        <p class="mb-4">

                            @foreach (var tag in BlogPost.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }

                        </p>


                        <p class="mb-4">
                           Summary: @BlogPost.ShortDescription
                        </p>

                        <a class="btn btn-dark" asp-area="" asp-controller="Blogs" asp-action="Index" asp-route-urlHandle="@BlogPost.UrlHandle">Read More</a>

                        </div>
                    
                }
            }

        </div>

    </div>

</div>