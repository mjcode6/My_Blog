@model Bloggie.Web.Models.ViewModels.UserViewModel
@{
}
<div class="bg-secondary bg-opacity-10 py-5">
    <div class="container">
        <h1>Users - fonctionnality</h1>
    </div>
</div>




<div>

    <div class="container py-5">

        @if(Model.users is not null || Model.users.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Id </th>
                        <th>UserName </th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.users)
                    {
                        <tr>
                            <td> @user.Id</td>
                            <td> @user.UserName</td>
                            <td> @user.EmailAddress</td>


                        </tr>




                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No users found!</p>
        }

       
    </div>
</div>